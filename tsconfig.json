{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.tsx?"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": "./",
    "allowJs": true
  }
}
