{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.tsx?"],
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "rootDir": "./src",
    "baseUrl": "${{GITHUB_WORKSPACE}}/packages/react-foundation",
    "allowJs": false
  }
}
